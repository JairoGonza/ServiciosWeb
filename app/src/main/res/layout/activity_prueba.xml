<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/pokemon_gradient2"
              android:orientation="vertical"
              tools:context="com.example.jairo.serviciosweb.Prueba"
              android:weightSum="1">

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Pokemon"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/nombreTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="55dp">

        <ImageView
            android:id="@+id/otroImageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.32"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/ic_launcher_round"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/pesoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="109dp"/>

        <TextView
            android:id="@+id/AlturaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura:"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp"/>

        <TextView
            android:id="@+id/ExperieciaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiencia:"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp"/>

        <TextView
            android:id="@+id/tipoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp"/>

        <TextView
            android:id="@+id/habilidadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habilidades:"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="75dp"/>

        <TextView
            android:id="@+id/habilidadTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="75dp"/>

        <TextView
            android:id="@+id/habilidadTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="75dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/pokebola"
        android:onClick="salir"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
